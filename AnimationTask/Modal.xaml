<Window x:Class="AnimationTask.Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationTask"
        xmlns:uc="clr-namespace:UserControls_Shared;assembly=UserControls_Shared"
        mc:Ignorable="d"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner"  Loaded="Window_Loaded">
    <Grid>
        <uc:Progress_Viewer x:Name="progress"></uc:Progress_Viewer>
    </Grid>
</Window>
