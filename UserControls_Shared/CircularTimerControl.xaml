<UserControl x:Class="UserControls_Shared.CircularTimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls_Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ellipse Width="100" Height="100" Stroke="Blue" StrokeThickness="5" StrokeDashArray="7">
            <Ellipse.RenderTransform>
                <RotateTransform x:Name="rotateTransform" Angle="0" CenterX="50" CenterY="50"/>
            </Ellipse.RenderTransform>
        </Ellipse>
 
        <TextBlock x:Name="countdownText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="Red"/>
    </Grid>
</UserControl>
