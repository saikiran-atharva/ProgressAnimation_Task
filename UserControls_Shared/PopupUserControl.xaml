<UserControl x:Class="UserControls_Shared.PopupUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="300" Background="Transparent">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="150">
        <!-- Circular Progress Ring -->
        <Canvas Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Background Circle (Optional, to represent the full circle) -->
            <Ellipse Stroke="LightGray" StrokeThickness="5" Width="100" Height="100" />

            <!-- Arc Path representing the rotating segment -->
            <Path Stroke="Blue" StrokeThickness="5" Data="M50,0 A50,50 0 1 1 49.999,0.0001">
                <Path.RenderTransform>

                    <RotateTransform x:Name="SpinnerRotate" Angle="0" CenterX="50" CenterY="50" />
                </Path.RenderTransform>
            </Path>
        </Canvas>

        <!-- Countdown Text -->
        <TextBlock Name="CountdownText" FontSize="24" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Text="30"/>
    </Grid>
</UserControl>
