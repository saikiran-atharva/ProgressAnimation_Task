<UserControl x:Class="UserControls_Shared.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls_Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Ellipse Width="100" Height="100"/>
            <Path Name="progressPath" Stroke="Blue" StrokeThickness="10" StrokeDashArray="12">
                <Path.Data>
                    <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                </Path.Data>
            </Path>
        </Canvas>
    </Grid>
</UserControl>
